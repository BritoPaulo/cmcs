@model List<cmcs.Models.Claim>
@{
    ViewData["Title"] = "Admin Dashboard - Pending Claims";
}

<h2 class="mb-4">📋 Claims Approval Dashboard</h2>

<!-- Debug Information -->
<div class="alert alert-info mb-4">
    <h5>Debug Information:</h5>
    <p>Total Claims in Database: <strong>@ViewBag.AllClaimsCount</strong></p>
    <p>Pending Claims for Review: <strong>@ViewBag.PendingClaimsCount</strong></p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h3>@Model.Count(c => c.Status == "Submitted")</h3>
                <p class="card-text">New Submissions</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h3>@Model.Count(c => c.Status == "Under Review")</h3>
                <p class="card-text">Under Review</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h3>@ViewContext.HttpContext.Request.Cookies["ApprovedCount"]</h3>
                <p class="card-text">Approved</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger">
            <div class="card-body text-center">
                <h3>@ViewContext.HttpContext.Request.Cookies["RejectedCount"]</h3>
                <p class="card-text">Rejected</p>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <h4>🚫 No pending claims found!</h4>
        <p>This could be because:</p>
        <ul>
            <li>No claims have been submitted yet</li>
            <li>All claims have been processed</li>
            <li>Claims have different statuses (check database)</li>
            <li>There's an issue with the database query</li>
        </ul>
        <hr>
        <p><strong>Debug Steps:</strong></p>
        <ol>
            <li>Check if lecturers have submitted claims</li>
            <li>Verify claims have status "Submitted" or "Under Review"</li>
            <li>Check database connection</li>
        </ol>
    </div>

    <!-- Show ALL claims for debugging -->
    <div class="card mt-4">
        <div class="card-header">
            <h5>📊 All Claims in Database (Debug View)</h5>
        </div>
        <div class="card-body">
            @{
                var allClaims = ViewBag.AllClaims as List<cmcs.Models.Claim> ?? new List<cmcs.Models.Claim>();
            }
            @if (allClaims.Any())
            {
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in allClaims)
                        {
                            <tr>
                                <td>@claim.ClaimId</td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.ClaimMonth.ToString("MMM yyyy")</td>
                                <td>
                                    <span class="badge @GetStatusBadge(claim.Status)">@claim.Status</span>
                                </td>
                                <td>@claim.SubmittedDate.ToString("MMM dd")</td>
                                <td>R @claim.TotalAmount.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No claims found in database at all.</p>
            }
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">⏳ Claims Requiring Action (@Model.Count)</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Docs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td><strong>#@claim.ClaimId</strong></td>
                                <td>
                                    <div>
                                        <strong>@claim.LecturerName</strong>
                                        <br>
                                        <small class="text-muted">@claim.LecturerEmail</small>
                                        @if (!string.IsNullOrEmpty(claim.Notes))
                                        {
                                            <br>
                                            <small class="text-info">📝 Has notes</small>
                                        }
                                    </div>
                                </td>
                                <td>@claim.ClaimMonth.ToString("MMM yyyy")</td>
                                <td>@claim.TotalHours.ToString("N1")</td>
                                <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                                <td>
                                    <span class="badge @GetStatusBadge(claim.Status)">@claim.Status</span>
                                </td>
                                <td>@claim.SubmittedDate.ToString("MMM dd")</td>
                                <td>
                                    @if (claim.SupportingDocuments.Any())
                                    {
                                        <span class="badge bg-success rounded-pill">
                                            📎 @claim.SupportingDocuments.Count
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">0</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group-vertical btn-group-sm">
                                        <!-- Review Details -->
                                        <a asp-action="ReviewClaim" asp-route-id="@claim.ClaimId"
                                           class="btn btn-outline-primary mb-1">
                                            👁️ Review
                                        </a>

                                        <!-- Quick Actions -->
                                        <form asp-action="ApproveClaim" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-success mb-1"
                                                    onclick="return confirm('✅ Approve claim #@claim.ClaimId?')">
                                                ✓ Approve
                                            </button>
                                        </form>

                                        <form asp-action="RejectClaim" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-danger"
                                                    onclick="return confirm('❌ Reject claim #@claim.ClaimId?')">
                                                ✗ Reject
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Quick Action Buttons -->
<div class="mt-4">
    <div class="btn-group">
        <a href="@Url.Action("Dashboard", new { email = "admin@iie.com" })" class="btn btn-outline-secondary">
            🔄 Refresh
        </a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
            🏠 Home
        </a>
    </div>
</div>

@functions {
    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Submitted" => "bg-info",
            "Under Review" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}